/* Theme Name: Minimalist */
@import url('https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Knewave&display=swap');

:root {
  --ff-heading: 'Knewave', cursive;
  --ff-body: 'Inter', sans-serif;
  --ff-code: 'Fira Code', monospace;
  --ff-formal: 'Knewave', cursive;

  /* Colors */
  --white: hsla(0, 0%, 100%);
  --black: hsla(0, 0%, 0%);
  --gray-10: hsla(0, 0%, 0%, 0.1);
  --gray-30: hsla(0, 0%, 0%, 0.3);
  --gray-50: hsla(0, 0%, 0%, 0.5);
  --gray-70: hsla(0, 0%, 0%, 0.7);
  --gray-90: hsla(0, 0%, 0%, 0.9);

  /* brand colors */
  /* --primary: #e2c76f; */
  /* --secondary: #1d3790; */
  --primary-100:hsl(38, 43%, 95%);
  --primary-500:hsl(38, 43%, 65%);
  --primary-900:hsl(38, 43%, 35%);

  --secondary-100: hsl(218, 43%, 65%);
  --secondary-500: hsl(218, 43%, 35%);
  --secondary-900: hsl(218, 43%, 15%);

  /* Spacing */
  --spacing-xs: 0.25rem;
  --spacing-s: 0.5rem;
  --spacing: 1rem;
  --spacing-m: var(--spacing);
  --spacing-l: 2rem;
  --spacing-xl: 4rem;
  --spacing-xxl: 8rem;

  /* Border radius */
  --border-radius: 0.25rem;
  --border-radius-lg: 0.5rem;

  /* Landing page */
  --h1: 400 6rem/1em var(--ff-heading);
  --h2: 400 3rem/1.2em var(--ff-heading);
  --h3: 400 2.25rem/1.2em var(--ff-heading);
  --h4: 400 1.5rem/1.6em var(--ff-heading);

  --big: 1.25rem/1.6em var(--ff-body);
  --p: 1rem/1.6em var(--ff-body);
  --small: 0.75em/2rem var(--ff-body);
  --xsmall: 0.5em/2rem var(--ff-body);
  --quote: italic 1rem/1.6em var(--ff-body);

  --button-font: 700 1rem/1.6em var(--ff-body);
  --link-font: 1rem/1.6rem var(--ff-body);
  --code-font: 1rem/1.6rem var(--ff-code);

  /* Inputs */
  --input: 1rem/1.6rem var(--ff-body);

  /* Form */
  --form: 1rem/1.6rem var(--ff-body);

  /* Links */
  --link-color: var(--primary-500);
  --link-hover-color: var(--gray-30);
  --link-active-color: var(--gray-50);
  --link-focus-color: var(--gray-50);
  --link-visited-color: var(--gray-70);

  /* Code */
  --code-background: var(--gray-90);
  --code-color: var(--gray-70);
  --code-padding: 1rem;
  --code-border-radius: var(--border-radius-lg);
  --code-line-height: 1.6rem;
  --code-font-size: 1rem;
}

/* * {
  border: 1px solid red!important;
  box-sizing: border-box;
} */

html,
body {
  font-family: var(--ff-body);
  font-optical-sizing: auto;
  font-weight: 400;
  font-style: normal;
  font-size: 16px;
  line-height: 1.6;
  scroll-behavior: smooth;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
  overflow-x: hidden;
  color: var(--black);
  background-color: var(--white);
  margin: 0;
  padding: 0;
}

h1{
	font: var(--h1);
}

.title-wrapper {
  display: flex;
  justify-content: center;
  width: 100%;
  margin-bottom: var(--spacing-l);
}

h2{
	display: flex;
	
	font: var(--h2);
	color:white;
	background: url(https://s2.svgbox.net/pen-brushes.svg?ic=brush-7&color=CCB07F) no-repeat;
	padding:1rem 2rem;
	width:fit-content;
	text-align: center;
}

h3{
	font: var(--h3);
}

h4{
	font: var(--h4);
}

.p{
	font: var(--p);
}

.small{
	font: var (--small);
}

.xsmall{
	font: var(--xsmall);
}

.big{
	font: var(--big);
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--spacing);
}

.flex {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-l);
}

.flex-column {
	flex:1;
	min-width:500px;
  display: flex;
  align-items:center;
  flex-direction: column;
  gap: var(--spacing);
}

.stretch {
  align-items:stretch;
}

header {
  padding: var(--spacing) 0;
}

nav, 
footer .container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width:100%;
  z-index:100;
}

.nav__logo img {
  max-height: 50px;
}

.nav__links ul {
  list-style: none;
  display: flex;
  align-items: center;
  gap: var(--spacing-l);
  margin: 0;
  padding: 0;
  position:relative;
}

.nav__links ul li {
  position: relative;
  z-index: 111;
  cursor:pointer;
}

.nav__links a {
  text-decoration: none;
  color: var(--black);
  font-weight: bold;
}

.nav__links a:hover {
  color: var(--link-hover-color);
}

.nav__links ul li {
  position: relative; /* Add this to create a positioning context */
}

.nav__links ul ul {
  display: none;
  position: absolute;
  top: 225%; /* Change from fixed spacing to relative positioning */
  left: calc(-1 * (var(--spacing-l)));
  background-color: var(--primary-500);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  padding: var(--spacing-m) 0;
  border-radius: var(--border-radius);
  min-width: 200px; /* Add minimum width to ensure content fits */
}

.nav__links ul li:hover > ul {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap:var(--spacing-l);
  padding:var(--spacing-l);
  background-color: var (--white);
  z-index: 110;
}

.nav__links ul ul::before { /* Add invisible area to prevent gap */
  content: '';
  position: absolute;
  top: -200px; /* Negative margin to create hover bridge */
  /* background-color: pink; */
  left: 0;
  width: 50%;
  height: 200px;  pointer-events: none; /* Make the pseudo-element not clickable */

}

nav .button{	
	background-color:var(--secondary-500);
  border-color: var(--secondary-500);
  color:var(--white);
}

nav .button:hover{
  background-color:var(--secondary-900);
  border-color:var(--secondary-900);
  color:var(--white);
}

#hero {
  position: relative;
  background-color: var(--primary-500);
  /* color:black; */
  z-index: 0; /* Ensure this creates a new stacking context */
}

#hero .flex-column {
	gap: var(--spacing-xl)
}

#hero:before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1; /* Background image layer */
  background-image: url('src/werk-schilder-overkapping.webp');
  opacity:0.5;
  background-size: cover;
  background-position: 0 -100px;
  background-repeat: no-repeat;
}

#hero .container {
  position: relative;
  z-index: 2; 
}

#hero h1 {
  font: var(--h1);
  color:var(--secondary-500);
}

#hero p {
  font: var(--big);
  opacity: 0.8;
}

section {
	padding: 8rem 0;
}

#services,
#partners,
#timmerwerk,
#schilderwerk,
#coating,
#afbeeldingen {
	background-color: var(--primary-100);
}

#services h2,
#partners h2,
#timmerwerk h2,
#schilderwerk h2,
#coating h2,
#afbeeldingen h2{
	color:var(--primary-100);
	background: url(https://s2.svgbox.net/pen-brushes.svg?ic=brush-7&color=806333) no-repeat;
}

.services-list{
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
	gap: var(--spacing-l);
}

#services .services-list li{
	background: url(https://s2.svgbox.net/pen-brushes.svg?ic=brush-2&color=334f80) no-repeat;
	padding: var(--spacing-s) var(--spacing-m);

	a{
		color: var(--white);
		text-decoration: none;
		font-weight:700;
	}
}

ul {
  list-style: none;
  padding: 0;
  text-align: center;
}

ul li {
  font: var(--p);
  color: var(--gray-50);
}

#testimonials {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  gap: var(--spacing);
}

blockquote {

	display:flex;
	flex-direction: column;
	justify-content: space-between;
  font: var(--quote);
  color: var(--gray-70);
  border-left: 4px solid var(--primary-500);
  padding: var(--spacing-s) var(--spacing);
  margin-inline: 0; /* Remove margin */
  width: 100%; /* Take full width of carousel-item */
  height: 100%; /* Ensure full height */
  background-color: var(--gray-10);
  border-radius: var (--border-radius);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  position: relative; /* Ensure pseudo-elements are positioned correctly */
}

blockquote p::before,
blockquote p::after {
  content: '"'; /* Opening quotation mark */
}

cite {
  display: block;
  text-align: right;
  font: var(--small);
  color: var(--gray-50);
  margin-top: var(--spacing);
}

footer {
  text-align: center;
  padding: var(--spacing-xl) 0;
  background-color: var(--gray-90);
  color: var(--white);
}

footer .footer-container {
  height: auto; /* Ensure height is dictated by content */
}

footer .footer-logo {
  display: flex;
  align-items: center;
  height: auto; /* Ensure height is dictated by content */
}

footer .footer-logo img {
  /* height: 100%; */
  width: auto;
  object-fit: contain;
}

footer .footer-contact {
  font: var(--p);
  color: var(--white);
  text-align: center;
}

footer .footer-contact a {
  color: var(--primary-500);
  text-decoration: none;
}

footer .footer-contact a:hover {
  color: var(--primary-900);
}

footer .footer-copyright {
  font: var(--small);
  color: var(--white);
  padding-top:var(--spacing-xl)
}

.button {
  font: var(--button-font);
  border: 2px solid var(--primary-500);
  cursor: pointer;
  padding: var(--spacing-s) var(--spacing-m);
  border-radius: var(--spacing-s);
  width: fit-content;
  text-decoration: none;
  position: relative;
  color: var(--white);
  background-color: var(--primary-500);
  transition: 
    color 0.3s ease, 
    background-color 0.3s ease;
}

.button:hover {
  background-color: var(--primary-900);
  
}

.secondary{
  background-color:transparent;
  color:var(--primary-500);
}

figure {
  display: inline-flex;
  flex-direction: column;
  gap: var(--spacing);
  max-height: 50vh;
  padding: var(--spacing);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  border-radius: var(--border-radius);
  background-color: #fff;
  /* Added properties */
  position: relative;
  width: auto;
  max-width: 100%;
}

.figure-image-wrapper {
  flex: 1;
  position: relative;
  width: auto; /* Changed from 100% */
  min-width: 150px;
  align-self: flex-start; /* Allow wrapper to expand beyond container */
}

figure img {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
  /* display: block; */
  /* margin: 0 auto; */
}

figure figcaption {
  opacity: 0.75;
  font-style: italic;
  text-align: center;
  flex-shrink: 0;
  padding: 0 var(--spacing);
}

.angle{
	rotate: 5deg;
}

.carousel {
  position: relative;
  overflow: hidden;
  width: 100%;  
  padding-inline: 50px; /* Add padding for controls */
  box-sizing: border-box;
}

.carousel-track {
  --gap: var(--spacing-l); /* Define gap variable */
  display: flex;
  transition: transform 0.5s ease;
  padding-block: var(--spacing-l);
  gap: var(--gap); /* Add gap between items */
}

.carousel-item{  
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  /* padding: 0 calc(0.5 * var(--spacing-l)); */
  /* margin-right: calc(var(--gap) / 2); */
  max-width:100%;
}

.carousel.items-1 .carousel-item {
  flex: 0 0 100%;
}

.carousel.items-2 .carousel-item {
  flex: 0 0 calc(50% - var(--gap) / 2);
}

.carousel.items-3 .carousel-item {
  flex: 0 0 calc(33% - var(--gap) / 2);
}

.carousel.items-1 .carousel-item:nth-child(1n) { 
  margin-right: calc(62px + 3rem);   
}

.carousel.items-2 .carousel-item:nth-child(2n) { 
  margin-right: calc(62px + 48px);   
}
.carousel.items-3 .carousel-item:nth-child(3n) { 
  margin-right: calc(62px + 43px);   
}

.carousel-controls {  
  /* width: calc(100% - 120px);  */
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  transform: translateY(-50%);
  z-index: 10; /* Ensure controls stay on top */
  pointer-events: none;
}

.carousel-control {
  position: relative;
  background: url(https://s2.svgbox.net/pen-brushes.svg?ic=brush-6&color=CCB07F) no-repeat;
  border: none;
  padding: var(--spacing-s);
  cursor: pointer;
  font-size: 1.5rem;
  color: var(--white);
  pointer-events: auto;
  z-index: 20;
  background-size: cover;
}

.carousel-control:hover {
  background: url(https://s2.svgbox.net/pen-brushes.svg?ic=brush-6&color=000) no-repeat;
}

.carousel-indicators {
  display: flex;
  justify-content: center;
  margin-top: var(--spacing);
}

.carousel-indicator {
  width: 10px;
  height: 10px;
  background-color: var(--gray-30);
  border-radius: 50%;
  margin: 0 5px;
  cursor: pointer;
  transition: background-color 0.3s ease;
  border:1px solid var(--white);
}

.carousel-indicator.active {
  background-color: var(--primary-500);
  border:1px solid var(--white);
}

